extends layout.pug

block content
  article.grid-container.portfolio-intro
    div
      h1 Welcome to my portfolio site!

      p.lead.text-light
        |
        | Have a look on my portfolio below and let me know if you'd like me to put your next idea into a beautiful web site!
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each preview in previews
        .cell
            a(href='/project/' + preview.id)
              img.thumbnail(src= preview.thumbnail)
              h5 #{preview.title}

